{
  "name": "@kaze-no-manga/models",
  "version": "1.0.0",
  "description": "ðŸ“˜ Shared TypeScript types and GraphQL definitions for Kaze no Manga ecosystem",
  "type": "module",
  "scripts": {
    "prelint": "npm run build",
    "lint": "concurrently npm:lint:* --prefixColors auto",
    "postlint": "npm run clean",
    "lint:format": "biome check --write",
    "lint:lockfile": "lockfile-lint --path package-lock.json",
    "lint:engines": "ls-engines",
    "lint:publish": "publint --strict",
    "pretest": "npm run build",
    "test": "vitest run",
    "pretest:coverage": "npm run build",
    "test:coverage": "vitest run --coverage",
    "posttest:coverage": "coverage-badge-readme",
    "clean": "rimraf --glob ./{lib,scripts,test}/**/*.{d.ts,js} ./vitest*.{d.ts,js}",
    "prebuild": "npm run codegen",
    "build": "tsc",
    "postbuild": "npm run merge-schema",
    "precodegen": "npm run clean",
    "codegen": "graphql-codegen",
    "merge-schema": "tsx scripts/merge-schema.ts",
    "prepare": "[ \"$CI\" = \"true\" ] || [ \"$GITHUB_ACTIONS\" = \"true\" ] && echo 'Skipping husky' && exit 0 || husky"
  },
  "exports": {
    ".": "./lib/index.js",
    "./graphql": "./lib/graphql/index.js",
    "./graphql/domains": "./lib/graphql/domains/index.js",
    "./graphql/user": "./lib/graphql/domains/user.graphql",
    "./graphql/content": "./lib/graphql/domains/content.graphql",
    "./graphql/library": "./lib/graphql/domains/library.graphql"
  },
  "files": [
    "lib"
  ],
  "engines": {
    "node": ">= 20"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kaze-no-manga/models.git"
  },
  "keywords": [
    "typescript",
    "types",
    "graphql",
    "manga",
    "validation",
    "schemas",
    "models",
    "shared",
    "kaze"
  ],
  "author": "Zweer <n.olivieriachille@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kaze-no-manga/models/issues"
  },
  "homepage": "https://github.com/kaze-no-manga/models#readme",
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github",
      "@semantic-release/git"
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@graphql-codegen/cli": "^6.1.0",
    "@graphql-codegen/typescript": "^5.0.6",
    "@graphql-codegen/typescript-resolvers": "^5.1.4",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@tsconfig/node22": "^22.0.5",
    "@types/node": "^25.0.0",
    "@vitest/coverage-v8": "^4.0.15",
    "@zweer/coverage-badge-readme": "^1.2.2",
    "concurrently": "^9.2.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "lockfile-lint": "^4.14.1",
    "ls-engines": "^0.9.3",
    "publint": "^0.3.16",
    "rimraf": "^6.1.2",
    "semantic-release": "^25.0.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  },
  "dependencies": {
    "graphql": "^16.12.0"
  }
}
